@model TblPlatilloBebida

<div class="row">
    <div class="col-md-5">
        <div class="form-group">
            <label>Nombre del platillo:</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label>Descripción del platillo:</label>
            <textarea asp-for="Descripcion" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label>Categoría del platillo:</label>
            @Html.DropDownList("Fkcategoriaplatillo", new SelectList(ViewBag.ListCategorias, "Pk", "Nombre"), "-- Seleccione una categoría--", new { @class = "form-control" })
            <span asp-validation-for="Fkcategoriaplatillo" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            <label>Precio:</label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>  
        <div class="form-group">
            <img src="~/images/image-preview.png" />
            
            <div class="mt-3">
                <label for="formFile" class="form-label">Seleccione una imagen</label>
                <input class="form-control" type="file" id="formFile">
            </div>
        </div>
    </div>
</div>