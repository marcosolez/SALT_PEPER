@model SALT_PEPER.ENTIDADES.TblIngrediente

@{
    ViewData["Title"] = "Eliminar";
}

<div class="card">
    <div class="card-body">

        <h4>Está seguro que desea eliminar este registro?</h4>
        <div class="button-items ">
            <a asp-action="Index" class="btn btn-primary float-sm-end btn-sm waves-effect waves-light">
                <i class="fa fa-backspace" aria-hidden="true"></i>
                Regresar
            </a>
        </div>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FkunidadmedidaNavigation.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FkunidadmedidaNavigation.Nombre)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cantidadporunidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cantidadporunidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Minimostock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Minimostock)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-2">
                <input type="hidden" asp-for="Pk" />
                <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />

            </form>
        </div>
    </div>
</div>